<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ProfileFragment">


    <ImageView
        android:id="@+id/profile_image_view"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_150sdp"
        android:layout_marginBottom="@dimen/_35sdp"
        android:background="@drawable/circular_bg"
        android:clickable="true"
        android:elevation="@dimen/_5sdp"
        android:scaleType="centerCrop"
        android:src="@drawable/person_icon"
        tools:ignore="ContentDescription,ImageContrastCheck,KeyboardInaccessibleWidget,UnusedAttribute,VisualLintBounds,SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/profile_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_8sdp"
        android:background="@drawable/edit_text_rounded_corner"
        android:elevation="@dimen/_5sdp"
        android:hint="Username"
        android:inputType="text"
        android:padding="@dimen/_8sdp"
        tools:ignore="Autofill,HardcodedText,UnusedAttribute,TouchTargetSizeCheck,VisualLintTextFieldSize" />


    <EditText
        android:id="@+id/profile_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_8sdp"
        android:background="@drawable/edit_text_rounded_corner"
        android:elevation="@dimen/_5sdp"
        android:enabled="false"
        android:hint="Phone"
        android:inputType="phone"
        android:padding="@dimen/_8sdp"
        tools:ignore="Autofill,HardcodedText,TextFields,UnusedAttribute,TouchTargetSizeCheck,VisualLintTextFieldSize" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_95sdp"
        android:layout_marginTop="@dimen/_18sdp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        tools:ignore="VisualLintBounds">

        <Button
            android:id="@+id/profle_update_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_rounded_corner"
            android:text="@string/update_profile"
            tools:ignore="TextContrastCheck,VisualLintButtonSize" />

        <ProgressBar
            android:id="@+id/profile_progress_bar"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminateTint="@color/my_primary"
            tools:ignore="UnusedAttribute" />
    </LinearLayout>

    <TextView
        android:id="@+id/logout_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="@string/logout"
        android:textSize="@dimen/_15sdp"
        tools:ignore="VisualLintBounds,TextSizeCheck" />


</LinearLayout>