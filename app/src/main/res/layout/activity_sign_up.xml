<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context=".Activity.SignUpActivity">


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="@dimen/_10mdp"
        app:layout_constraintTop_toBottomOf="@id/main_toolbar"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            tools:ignore="ScrollViewSize">


            <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:gravity="center_horizontal"
             android:orientation="vertical"
             tools:ignore="MissingConstraints,UselessParent">



             <FrameLayout
                 android:id="@+id/layoutImage"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="@dimen/_20mdp">

                 <com.makeramen.roundedimageview.RoundedImageView
                     android:id="@+id/imageProfile"
                     android:layout_width="@dimen/_80mdp"
                     android:layout_height="@dimen/_80mdp"
                     android:background="@drawable/bacgrount_input"
                     android:scaleType="centerCrop"
                     app:riv_oval="true" />


                 <TextView
                     android:id="@+id/textAddImage"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center"
                     android:text="@string/add_image"
                     android:textColor="@color/black"
                     android:textStyle="bold"
                     android:textSize="@dimen/_10mdp"
                     tools:ignore="TextSizeCheck" />


             </FrameLayout>



             <EditText
                 android:id="@+id/inputName"
                 android:layout_width="match_parent"
                 android:layout_height="@dimen/_35mdp"
                 android:layout_marginTop="@dimen/_40mdp"
                 android:background="@drawable/follow_active_btn"
                 android:hint="@string/name"
                 android:imeOptions="actionNext"
                 android:importantForAutofill="no"
                 android:inputType="text"
                 android:paddingStart="@dimen/_16mdp"
                 android:paddingEnd="@dimen/_16mdp"
                 android:textColor="@color/black"
                 android:textSize="@dimen/_13mdp"
                 tools:ignore="TouchTargetSizeCheck,UnusedAttribute" />



             <EditText
                 android:id="@+id/inputEmail"
                 android:layout_width="match_parent"
                 android:layout_height="@dimen/_35mdp"
                 android:layout_marginTop="@dimen/_16mdp"
                 android:background="@drawable/follow_active_btn"
                 android:hint="@string/e_mail"
                 android:imeOptions="actionNext"
                 android:importantForAutofill="yes"
                 android:inputType="textEmailAddress"
                 android:paddingStart="@dimen/_16mdp"
                 android:paddingEnd="@dimen/_16mdp"
                 android:textColor="@color/black"
                 android:textSize="@dimen/_13mdp"
                 tools:ignore="TouchTargetSizeCheck" />


             <EditText
                 android:id="@+id/inputPassword"
                 android:layout_width="match_parent"
                 android:layout_height="@dimen/_35mdp"
                 android:layout_marginTop="@dimen/_16mdp"
                 android:background="@drawable/follow_active_btn"
                 android:hint="@string/password"
                 android:imeOptions="actionDone"
                 android:importantForAutofill="no"
                 android:inputType="textPassword"
                 android:paddingStart="@dimen/_16mdp"
                 android:paddingEnd="@dimen/_16mdp"
                 android:textColor="@color/black"
                 android:textSize="@dimen/_13mdp"
                 tools:ignore="TouchTargetSizeCheck" />

             <FrameLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="@dimen/_16mdp"
                 android:animateLayoutChanges="true">

                 <ProgressBar
                     android:id="@+id/progressBar"
                     android:layout_width="@dimen/_25mdp"
                     android:layout_height="@dimen/_25mdp"
                     android:layout_gravity="center"
                     android:visibility="invisible" />


                 <com.google.android.material.button.MaterialButton
                     android:id="@+id/buttonSignUp"
                     android:layout_width="match_parent"
                     android:layout_height="@dimen/_40mdp"
                     android:text="@string/sign_up"
                     android:textAllCaps="false"
                     android:textColor="@color/white"
                     android:layout_marginStart="@dimen/_16mdp"
                     android:layout_marginEnd="@dimen/_16mdp"
                     android:textSize="@dimen/_13mdp"
                     android:textStyle="bold"
                     app:cornerRadius="@dimen/_150mdp" />



             </FrameLayout>




             <TextView
                 android:id="@+id/textSignIn"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="@dimen/_10mdp"
                 android:text="@string/sign_in"
                 android:textColor="@color/teal_200"
                 android:textSize="@dimen/_13mdp"
                 android:textStyle="bold" />


             <TextView
                 android:id="@+id/textprivacy_Policy"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="20dp"
                 android:autoLink="web"
                 android:text="Privacy Policy"
                 android:textColor="#2196F3"
                 android:textSize="16sp"
                 android:textStyle="bold"/>


            </LinearLayout>


        </LinearLayout>


    </ScrollView>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_top"
        android:elevation="@dimen/_5mdp"
        android:padding="@dimen/_8mdp"
        app:layout_constraintBottom_toTopOf="@id/scrollView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints,UnusedAttribute">


        <TextView
            android:id="@+id/text_Home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_10mdp"
            android:text="@string/sign_up"
            android:textColor="@color/deepPink"
            android:textSize="@dimen/_20mdp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="RelativeOverlap,TextSizeCheck" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>