<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/primary"
    tools:context=".Activity.ChatActivity">


    <EditText
        android:id="@+id/inputMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16mdp"
        android:layout_marginEnd="@dimen/_8mdp"
        android:layout_marginBottom="@dimen/_12mdp"
        android:background="@drawable/background_chat_input"
        android:hint="@string/type_a_tifor_message"
        android:maxLines="5"
        android:paddingTop="@dimen/_12mdp"
        android:paddingBottom="@dimen/_12mdp"
        android:paddingStart="@dimen/_16mdp"
        android:paddingEnd="@dimen/_16mdp"
        android:textColor="@color/white"
        android:textColorHint="@color/secondary_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/layoutSend"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="Autofill,MissingConstraints,RtlHardcoded,TextContrastCheck,TextFields,VisualLintTextFieldSize" />


    <ImageView
        android:id="@+id/imageVcall"
        android:layout_width="@dimen/_30mdp"
        android:layout_height="@dimen/_30mdp"
        android:layout_marginTop="@dimen/_12mdp"
        android:layout_marginEnd="@dimen/_30mdp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="@dimen/_4mdp"
        android:src="@drawable/videocall"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/red"
        tools:ignore="ContentDescription,MissingConstraints,RtlHardcoded" />
    <!--All Show Bottom-->


    <View
        android:id="@+id/headerBackground"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/primary"
        app:layout_constraintBottom_toBottomOf="@id/viewSupporter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints" />


    <View
        android:id="@+id/viewSupporter"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/_12mdp"
        android:background="@color/primary"
        app:layout_constraintTop_toBottomOf="@id/imageBack"
        tools:ignore="MissingConstraints" />


    <View
        android:id="@+id/viewBackground"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/_16mdp"
        android:background="@drawable/background_content_toop2"
        app:layout_constraintBottom_toTopOf="@id/inputMessage"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/chatRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:overScrollMode="never"
        android:padding="@dimen/_20mdp"
        android:visibility="gone"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="@id/viewBackground"
        app:layout_constraintTop_toBottomOf="@id/textAvailability"
        app:stackFromEnd="true"
        tools:ignore="MissingConstraints" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="@dimen/_25mdp"
        android:layout_height="@dimen/_25mdp"
        app:layout_constraintBottom_toBottomOf="@id/viewBackground"
        app:layout_constraintEnd_toEndOf="@id/viewBackground"
        app:layout_constraintStart_toStartOf="@id/viewBackground"
        app:layout_constraintTop_toTopOf="@id/viewBackground"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8mdp"
        android:layout_marginEnd="@dimen/_8mdp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textSize="@dimen/_14mdp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/imageBack"
        app:layout_constraintEnd_toStartOf="@id/imageCall"
        app:layout_constraintStart_toEndOf="@id/imageBack"
        app:layout_constraintTop_toTopOf="@id/imageBack"
        tools:ignore="MissingConstraints,VisualLintOverlap" />



    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageCall"
        android:layout_width="@dimen/_30mdp"
        android:layout_height="@dimen/_30mdp"
        android:layout_marginTop="@dimen/_12mdp"
        android:layout_marginEnd="@dimen/_16mdp"
        android:layout_marginRight="@dimen/_16mdp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="@dimen/_4mdp"
        android:src="@drawable/phone"
        app:layout_constraintEnd_toStartOf="@id/imageVcall"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints,RtlHardcoded" />


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/layoutSend"
        android:layout_width="@dimen/_40mdp"
        android:layout_height="@dimen/_40mdp"
        android:layout_marginEnd="@dimen/_10mdp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="@dimen/_8mdp"
        android:src="@drawable/ic_send"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/inputMessage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/inputMessage"
        app:layout_constraintTop_toTopOf="@id/inputMessage" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageBack"
        android:layout_width="@dimen/_30mdp"
        android:layout_height="@dimen/_30mdp"
        android:layout_marginStart="@dimen/_16mdp"
        android:layout_marginLeft="@dimen/_16mdp"
        android:layout_marginTop="@dimen/_12mdp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="@dimen/_5mdp"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/white"
        tools:ignore="MissingConstraints,RtlHardcoded" />


    <TextView
        android:id="@+id/textAvailability"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#008000"
        android:gravity="center"
        android:padding="@dimen/_2mdp"
        android:text="@string/tf_user_online"
        android:textColor="@color/white"
        android:textSize="@dimen/_10mdp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/viewSupporter" />


</androidx.constraintlayout.widget.ConstraintLayout>