<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context=".Activity.LogInActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="@dimen/_10mdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_toolbar">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            tools:ignore="ScrollViewSize">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                tools:ignore="MissingConstraints,UselessParent">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_40mdp"
                    android:text="@string/welcome_back"
                    android:textColor="@color/purple_500"
                    android:textSize="@dimen/_18mdp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/login_to_continue"
                    android:textColor="@color/purple_500"
                    android:textSize="@dimen/_12mdp"
                    android:textStyle="bold"
                    tools:ignore="TextSizeCheck" />


                <EditText
                    android:id="@+id/inputEmail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35mdp"
                    android:layout_marginTop="@dimen/_40mdp"
                    android:background="@drawable/follow_active_btn"
                    android:hint="@string/e_mail"
                    android:imeOptions="actionNext"
                    android:importantForAutofill="no"
                    android:inputType="textEmailAddress"
                    android:paddingStart="@dimen/_16mdp"
                    android:paddingEnd="@dimen/_16mdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13mdp"
                    tools:ignore="TouchTargetSizeCheck" />


                <EditText
                    android:id="@+id/inputPassword"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35mdp"
                    android:layout_marginTop="@dimen/_40mdp"
                    android:background="@drawable/follow_active_btn"
                    android:hint="@string/password"
                    android:imeOptions="actionDone"
                    android:importantForAutofill="no"
                    android:inputType="textPassword"
                    android:paddingStart="@dimen/_16mdp"
                    android:paddingEnd="@dimen/_16mdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_13mdp"
                    tools:ignore="TouchTargetSizeCheck" />


                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20mdp"
                    android:animateLayoutChanges="true">


                    <ProgressBar
                        android:id="@+id/progressBar"
                        android:layout_width="@dimen/_25mdp"
                        android:layout_height="@dimen/_25mdp"
                        android:layout_gravity="center"
                        android:visibility="invisible" />


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/buttonSignIn"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40mdp"
                        android:layout_marginStart="@dimen/_16mdp"
                        android:layout_marginEnd="@dimen/_16mdp"
                        android:text="@string/login"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13mdp"
                        android:textStyle="bold"
                        app:cornerRadius="@dimen/_150mdp" />


                </FrameLayout>




                <TextView
                    android:id="@+id/textCreateNewAccount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_30mdp"
                    android:text="@string/create_new_account"
                    android:textColor="@color/teal_200"
                    android:textSize="@dimen/_13mdp"
                    android:textStyle="bold" />


            </LinearLayout>

        </LinearLayout>


    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_top"
        android:elevation="@dimen/_5mdp"
        android:padding="@dimen/_8mdp"
        app:layout_constraintBottom_toTopOf="@id/scrollView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints,UnusedAttribute">


        <TextView
            android:id="@+id/text_Home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_10mdp"
            android:text="@string/login"
            android:textColor="@color/deepPink"
            android:textSize="@dimen/_20mdp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="RelativeOverlap,TextSizeCheck" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>